@using ENB.PharmaciesAndPrescriptions.Entities;
@model ENB.PharmaciesAndPrescriptions.MVC.Models.DisplayDrugAndMedication;

@{
    ViewData["Title"] = "Details";
}

<div class="alert alert-primary" role="alert">
    <h2><strong>Details Drug: @ViewBag.Message</strong></h2>
</div>

<div id="view-all">
    @await Html.PartialAsync("_Details", Model)
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
    <div class="row">
        <div class="col-md-6">
        <a asp-action="Edit" asp-controller="DrugMedication" asp-route-id="@ViewBag.Id" class="btn btn-info btn-block col-md-2">Edit</a>
        </div>
        <div class="col-md-6">
        <a asp-action="List" asp-route-Drug_companyId="@ViewBag.DrugcpId" class="btn btn-secondary btn-block col-md-5">Back to List</a>
        </div>
    </div>
    
